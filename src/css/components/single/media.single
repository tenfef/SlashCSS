/************************************************************
MEDIA
************************************************************/

.media {
  display: block;
  width: auto;
  max-width: 100%;
  background-size: contain;
  background-position: center center;
  background-repeat: no-repeat;

  /******************************
  SIZE
  ******************************/

  &-size {
    @each $size, $i in $sizes {
      &\:#{$size} {
        width: $i + 1rem;
        height: $i + 1rem;
      }
    }
    @each $screen, $size in $screens {
      &\@#{$screen} {
        @media (min-width : #{$size}) {
          @each $size, $i in $sizes {
            &\:#{$size} {
              width: $i + 1rem;
              height: $i + 1rem;
            }
          }
        }
      }
    }
  }
}
