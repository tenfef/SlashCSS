/************************************************************
FORM
************************************************************/

:root {
  --form-label-weight: var(--medium);
  --form-label-size: var(--tiny);
}

.form {

  /******************************
  FIELDSET
  ******************************/

  &\/item {
    position: relative;
    display: block;
    margin-bottom: var(--u4);
    &:last-child {
      margin-bottom: 0;
    }
    &:after {
      content: "";
      display: table !important;
      clear: both !important;
    }
  }
  &\/help {
    padding-top: var(--u1);
    font-size: var(--micro);
    color: var(--default-color);
    &-item {
      // States
      &.is-success {
        color: var(--form-success-border-color);
      }
      &.is-alert {
        color: var(--form-alert-border-color);
      }
      &.is-warning {
        color: var(--form-warning-border-color);
      }
    }
  }
}

/******************************
LABEL
******************************/

label {
  display: block;
  position: relative;
  padding-top: var(--u1);
  padding-bottom: var(--u1);
  font-size: var(--form-label-size);
  font-weight: var(--form-label-weight);
  color: var(--black);
  line-height: 1.55;
  transition: var(--transition);

  &.required {
    &:after {
      content: '*';
      position: relative;
      display: inline-block;
      top: -.3rem;
      left: .2rem;
      color: var(--red);
    }
  }
}
