/************************************************************
IMAGE
************************************************************/

$image-levels: 5 !default;

:root {
  --image-radius: var(--radius);
}

.image {
  display: block;
  width: auto;
  max-width: 100%;
  background-size: contain;
  background-position: center center;
  background-repeat: no-repeat;

  /******************************
  SHAPE
  ******************************/

  &-shape {
    &\:square {
      border-radius: 0;
      overflow: hidden;
    }
    &\:round {
      border-radius: 500px;
      overflow: hidden;
    }
  }

  /******************************
  SIZE
  ******************************/

  &-size {
    @while $image-levels > 0 {
      &\:#{$image-levels} {
        width: var(--u#{$image-levels});
        height: var(--u#{$image-levels});
      }
      $image-levels: $image-levels - 1;
    }
    @each $screen, $size in $screens {
      &-#{$screen} {
        @media (min-width : #{$size}) {
          @while $image-levels > 0 {
            &\:#{$image-levels} {
              width: var(--u#{$image-levels});
              height: var(--u#{$image-levels});
            }
            $image-levels: $image-levels - 1;
          }
        }
      }
    }
  }
}
