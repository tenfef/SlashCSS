/************************************************************
WRAP
************************************************************/

$max-width: 1600px !default;

:root {
  --max-width: #{$max-width};
}

.wrap {

  position: relative;
  width: 100%;
  max-width: var(--max-width);
  margin: auto;
  padding-left: var(--u6);
  padding-right: var(--u6);
  @media (min-width: $sm) {
    padding-left: var(--u8);
    padding-right: var(--u8);
  }
  @media (min-width: $md) {
    padding-left: var(--u8);
    padding-right: var(--u8);
  }
  @media (min-width: $lg) {
    padding-left: var(--u8);
    padding-right: var(--u8);
  }

  /******************************
  FLUSH
  ******************************/

  &\:flush {
    padding: 0;
  }
  @each $key, $value in $screens {
    &\@#{$key} {
      @media (min-width: $value) {
        &\:flush {
          padding: 0;
        }
        &\:unflush {
          padding-left: var(--u6);
          padding-right: var(--u6);
          @media (min-width: $sm) {
            padding-left: var(--u8);
            padding-right: var(--u8);
          }
          @media (min-width: $md) {
            padding-left: var(--u8);
            padding-right: var(--u8);
          }
          @media (min-width: $lg) {
            padding-left: var(--u8);
            padding-right: var(--u8);
          }
        }
      }
    }
  }
}
