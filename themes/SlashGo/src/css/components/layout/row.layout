/************************************************************
GRID
************************************************************/

$row-gutters: 8 !default;

.row {

	clear: both;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;

	/******************************
  GUTTER
  ******************************/

	&-gutter {
		@while $row-gutters > 0 {
			&\:#{$row-gutters} {
				margin-left: var(--u-#{$row-gutters});
				margin-right: var(--u-#{$row-gutters});
				& > [class^=column] {
					padding-left: var(--u#{$row-gutters});
					padding-right: var(--u#{$row-gutters});
				}
			}
			$row-gutters: $row-gutters - 1;
		}
		@each $key, $value in $screens {
			&\@#{$key} {
				@media (min-width : #{$value}) {
					@while $row-gutters > 0 {
						&\:#{$row-gutters} {
							margin-left: $row-gutters * -1rem / 2;
							margin-right: $row-gutters * -1rem / 2;
							& > [class^=column] {
								padding-left: $row-gutters * 1rem / 2;
								padding-right: $row-gutters * 1rem / 2;
							}
						}
						$row-gutters: $row-gutters - 1;
					}
				}
			}
		}
	}
}
