/************************************************************
GRID
************************************************************/

$grid-gutters: 5 !default;

.grid {

  display: grid;

  /******************************
  COLUMN
  ******************************/

  $total-columns: $columns;
	@while $columns > 0 {
		&\:#{$columns} {
      display: grid;
      grid-template-columns: repeat($columns, 1fr);
		}
		$columns: $columns - 1;
	}
  @each $key, $value in $screens {
    &\@#{$key} {
      @media (min-width : #{$value}) {
        @while $columns > 0 {
      		&\:#{$columns} {
            display: grid;
            grid-template-columns: repeat($columns, 1fr);
      		}
      		$columns: $columns - 1;
      	}
      }
    }
  }

  /******************************
  GUTTER
  ******************************/

  &-gutter {
    @while $grid-gutters > 0 {
      &\:#{$grid-gutters} {
        grid-column-gap: $grid-gutters * 1rem;
        grid-row-gap: $grid-gutters * 1rem;
      }
      $grid-gutters: $grid-gutters - 1;
    }
    &-row {
      @while $grid-gutters > 0 {
        &\:#{$grid-gutters} {
          grid-row-gap: $grid-gutters * 1rem;
        }
        $grid-gutters: $grid-gutters - 1;
      }
      @each $key, $value in $screens {
        &\@#{$key} {
          @media (min-width : #{$value}) {
            @while $grid-gutters > 0 {
              &\:#{$grid-gutters} {
                grid-row-gap: $grid-gutters * 1rem;
              }
              $grid-gutters: $grid-gutters - 1;
            }
          }
        }
      }
    }
    &-column {
      @while $grid-gutters > 0 {
        &\:#{$grid-gutters} {
          grid-column-gap: $grid-gutters * 1rem;
        }
        $grid-gutters: $grid-gutters - 1;
      }
      @each $key, $value in $screens {
        &\@#{$key} {
          @media (min-width : #{$value}) {
            @while $grid-gutters > 0 {
              &\:#{$grid-gutters} {
                grid-column-gap: $grid-gutters * 1rem;
              }
              $grid-gutters: $grid-gutters - 1;
            }
          }
        }
      }
    }
    @each $key, $value in $screens {
      &\@#{$key} {
        @media (min-width : #{$value}) {
          @while $grid-gutters > 0 {
            &\:#{$grid-gutters} {
              grid-column-gap: $grid-gutters * 1rem;
              grid-row-gap: $grid-gutters * 1rem;
            }
            $grid-gutters: $grid-gutters - 1;
          }
        }
      }
    }
  }

  /******************************
  CHILD ELEMENTS
  ******************************/

  &\/item {
    position: relative;
  }
}
