/************************************************************
LIST
************************************************************/

$list-gutters: 5 !default;

.list {
  list-style: none;
  margin: 0;
  padding: 0;

  &\/item {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    text-decoration: none;
    &:hover {
      text-decoration: none;
    }
  }

  /******************************
  GUTTER
  ******************************/

  &-gutter {
    @while $list-gutters >= 0 {
      &\:#{$list-gutters} {
        .list\/item {
          margin-bottom: var(--u#{$list-gutters});
          &:last-child {
            margin-bottom: 0;
          }
        }
      }
      $list-gutters: $list-gutters - 1;
    }
  }

  /******************************
  DIRECTION
  ******************************/

  &-direction {
    &\:right {
      display: flex;
      .list\/item {
        margin-bottom: 0;
      }
      &.list-gutter {
        @while $list-gutters >= 0 {
          &\:#{$list-gutters} {
            .list\/item {
              margin-right: var(--u#{$list-gutters});
              &:last-child {
                margin-right: 0;
              }
            }
          }
          $list-gutters: $list-gutters - 1;
        }
      }
    }
  }
}
