/************************************************************
MIN
************************************************************/

$min-levels: 10 !default;

.min {

  &-width {
    &\:100\% {
      min-width: 100% !important;
    }
    @while $min-levels > 0 {
      &\:#{$min-levels}0 {
        min-width: var(--u#{$min-levels}0) !important;
      }
      $min-levels: $min-levels - 1;
    }
  }
  &-height {
    &\:100\% {
      min-height: 100% !important;
    }
    @for $i from 1 through 10 {
      &\:#{$i}0 {
        min-height: $i * 10rem !important;
      }
    }
    @while $min-levels > 0 {
      &\:#{$min-levels}0 {
        min-height: var(--u#{$min-levels}0) !important;
      }
      $min-levels: $min-levels - 1;
    }
  }

  @each $key, $value in $screens {
    &-width {
      &-#{$key} {
        @media (min-width: $value) {
          &\:100\% {
            min-width: 100% !important;
          }
          @while $min-levels > 0 {
            &\:#{$min-levels}0 {
              min-width: var(--u#{$min-levels}0) !important;
            }
            $min-levels: $min-levels - 1;
          }
        }
      }
    }
    &-height {
      &-#{$key} {
        @media (min-width: $value) {
          &\:100\% {
            min-height: 100% !important;
          }
          @while $min-levels > 0 {
            &\:#{$min-levels}0 {
              min-height: var(--u#{$min-levels}0) !important;
            }
            $min-levels: $min-levels - 1;
          }
        }
      }
    }
  }
}
