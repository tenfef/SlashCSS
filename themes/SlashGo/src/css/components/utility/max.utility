/************************************************************
MAX
************************************************************/

$max-levels: 18 !default;

.max {

  &-width {
    &\:100\% {
      max-width: 100% !important;
    }
    @while $max-levels > 0 {
      &\:#{$max-levels} {
        max-width: var(--u#{$max-levels}) !important;
      }
      $max-levels: $max-levels - 1;
    }
  }
  &-height {
    &\:100\% {
      max-height: 100% !important;
    }
    @while $max-levels > 0 {
      &\:#{$max-levels} {
        max-height: var(--u#{$max-levels}) !important;
      }
      $max-levels: $max-levels - 1;
    }
  }

  @each $key, $value in $screens {
    &-width {
      &-#{$key} {
        @media (min-width: $value) {
          &\:100\% {
            max-width: 100% !important;
          }
          @while $max-levels > 0 {
            &\:#{$max-levels} {
              max-width: var(--u#{$max-levels}) !important;
            }
            $max-levels: $max-levels - 1;
          }
        }
      }
    }
    &-height {
      &-#{$key} {
        @media (min-width: $value) {
          &\:100\% {
            max-height: 100% !important;
          }
          @while $max-levels > 0 {
            &\:#{$max-levels} {
              max-height: var(--u#{$max-levels}) !important;
            }
            $max-levels: $max-levels - 1;
          }
        }
      }
    }
  }
}
