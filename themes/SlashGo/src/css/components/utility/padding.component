/************************************************************
PADDING
************************************************************/

$paddings: 10 !default;

.padding {

  &\:none {
    padding: 0 !important;
  }
  &\:auto {
    padding: auto !important;
  }

  @while $paddings >= 0 {
    &\:#{$paddings} {
      padding: var(--u#{$paddings}) !important;
    }
    $paddings: $paddings - 1;
  }
  @each $key, $value in $screens {
    &\@#{$key} {
      @media (min-width: $value) {
        &\:none {
          padding: 0 !important;
        }
        &\:auto {
          padding: auto !important;
        }
        @while $paddings >= 0 {
          &\:#{$paddings} {
            padding: var(--u#{$paddings}) !important;
          }
          $paddings: $paddings - 1;
        }
      }
    }
  }

