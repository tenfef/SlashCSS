/************************************************************
DEFAULT VARIABLES
************************************************************/

/******************************
DEFAULT
******************************/

$prefix: "" !default;
$radius: 8px !default;
$border: 1px solid var(--border-color) !default;
$transition: all .2s !default;
$shadow: 0 3px 6px 2px rgba(0,60,200,0.10);
$unit: 0.25rem !default;

/******************************
BREAKPOINTS
******************************/

// breakpoint variables
$sm: 960px !default;
$md: 1140px !default;
$lg: 1600px !default;

// breakpoint map
$screens: (
  sm: $sm,
  md: $md,
  lg: $lg
) !default;

// font size map
$html-sizes: (
  $sm: 88%,  // 14px
  $md: 94%, // 15px
  $lg: 100%    // 16px
) !default;

/******************************
TYPOGRAPHY
******************************/

$font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Oxygen-Sans,Ubuntu,Cantarell,"Helvetica Neue",sans-serif !default;
$font-size: 16px !default;
$line-height: 1.5 !default;

$font-weights: (
  light: 300,
  regular: 400,
  medium: 600,
  bold: 700
) !default;

$font-sizes: (
  hero: 3.75rem,
  h1: 3.125rem,
  h2: 2.25rem,
  h3: 1.75rem,
  h4: 1.5rem,
  h5: 1.25rem,
  h6: 1.125rem,
  body: 16px,
  tiny: 14px,
  micro: 13px
) !default;

/******************************
COLORS
******************************/

$colors: (
  red: #FF2727,
  pink: #FF276C,
  violet: #D727FF,
  purple: #8D27FF,
  navy: #4A27FF,
  blue: #278AFF,
  teal: #00DEB1,
  green: #00B26B,
  lime: #6EDF00,
  yellow: #FFCE00,
  orange: #ff8a00,
  brown: #A83C00,
  grey: #5c789c,

  primary: #0036d0,
  secondary: #ff5600,
  tertiary: #ffdd24
) !default;

$tonal-colors: (

) !default;

$mono-colors: (
  white: #ffffff,
  black: #000000,
) !default;

@function generate-color-tones ($key, $value) {
  $map: (
    $key: (
      #{$key}-l1: mix(white, $value, 20%),
      #{$key}-l2: mix(white, $value, 30%),
      #{$key}-l3: mix(white, $value, 60%),
      #{$key}-l4: mix(white, $value, 85%),
      #{$key}-l5: mix(white, $value, 95%),
      #{$key}-d1: mix(black, $value, 15%),
      #{$key}-d2: mix(black, $value, 35%),
      #{$key}-d3: mix(black, $value, 50%),
      #{$key}-d4: mix(black, $value, 65%),
      #{$key}-d5: mix(black, $value, 75%)
    )
  );
  @return $map;
}

@each $key, $value in $colors {
  $map: ();
  $map: map-merge( $map, generate-color-tones($key, $value) );
  $tonal-colors: map-merge($tonal-colors, $map);
}

$colors: map-merge($colors, $mono-colors);

/******************************
UNITS
******************************/

$units: (
