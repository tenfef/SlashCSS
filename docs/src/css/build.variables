  u8: 2.5rem,
  u9: 3rem,
  u10: 3.5rem,
  u11: 4rem,

  u12: 6rem,
  u13: 8rem,
  u14: 10rem,
  u15: 12rem,

  u16: 20rem,
  u17: 28rem,
  u18: 36rem,

  u19: 68rem,
  u20: 100rem,

  u-1: -0.25rem,
  u-2: -0.5rem,
  u-3: -0.75rem,
  u-4: -1rem,
  u-5: -1.25rem,
  u-6: -1.5rem,

  u-7: -2rem,
  u-8: -2.5rem,
  u-9: -3rem,
  u-10: -3.5rem,
  u-11: -4rem,

  u-12: -6rem,
  u-13: -8rem,
  u-14: -10rem,
  u-15: -12rem,

  u-16: -20rem,
  u-17: -28rem,
  u-18: -36rem,

  u-19: -68rem,
  u-20: -100rem
) !default;

/******************************
SIZES
******************************/

$sizes: (
  xs: 1,
  sm: 2,
  md: 3,
  lg: 4,
  xl: 5
) !default;
